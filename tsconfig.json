{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "baseUrl": "./src",

    "paths": {
      "@/module/*": ["./components/modules/*"],
      "@/helper/*": ["./helpers/*"],
      "@/asset/*": ["./assets/*"],
      "@/class/*": ["./classes/*"]
    },

    "typeRoots": ["src/types"]
  }
}
