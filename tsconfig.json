{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "baseUrl": "./src",

    "paths": {
      "@/module/*": ["./components/modules/*"],
      "@/element/*": ["./components/elements/*"],
      "@/context/*": ["./contexts/*"],
      "@/constant/*": ["./constants/*"],
      "@/type/*": ["./types/*"],
      "@/helper/*": ["./helpers/*"],
      "@/asset/*": ["./assets/*"],
      "@/class/*": ["./classes/*"]
    },

    "typeRoots": ["src/types/*.d.ts"]
  }
}
